# A complete advance makefile

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -rf
CFLAGS=-Wall -Werror -Wextra -pedantic -std=gnu89

all: $(SRC) $(NAME)
	
$(NAME): m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean

re: oclean all

.PHONY: clean oclean fclean re all $(NAME)