# A complete advance makefile

NAME=school
RM=rm -rf
CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic -std=gnu89
SRC=main.c school.c
OBJ=$(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: oclean clean
re: oclean all
