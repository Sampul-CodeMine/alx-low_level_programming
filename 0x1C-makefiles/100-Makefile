# A complete advance makefile

NAME=school
CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic -std=gnu89
SRC=main.c school.c
OBJ=$(SRC:.c=.o)

.PHONY: clean oclean fclean re all $(NAME)

all: $(SRC) $(NAME)
	
$(NAME): $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) -o $@

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: oclean clean
re: oclean all
